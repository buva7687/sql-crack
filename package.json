{
  "name": "sql-crack",
  "displayName": "SQL Crack",
  "description": "Visualize SQL queries with interactive flow diagrams",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sql-crack.visualize",
        "title": "SQL Crack: Visualize SQL Query",
        "icon": "$(graph)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sql-crack.visualize",
          "when": "editorLangId == sql",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "sql-crack.visualize",
          "when": "editorLangId == sql",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sql-crack.visualize",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == sql"
      }
    ],
    "configuration": {
      "title": "SQL Crack",
      "properties": {
        "sqlCrack.defaultDialect": {
          "type": "string",
          "default": "MySQL",
          "enum": ["MySQL", "PostgreSQL", "TransactSQL", "Snowflake", "BigQuery", "Redshift", "Hive", "Athena", "Trino", "MariaDB", "SQLite"],
          "enumDescriptions": [
            "MySQL dialect",
            "PostgreSQL dialect",
            "SQL Server / T-SQL dialect",
            "Snowflake dialect",
            "Google BigQuery dialect",
            "Amazon Redshift dialect",
            "Apache Hive / Databricks dialect",
            "Amazon Athena dialect",
            "Trino (formerly Presto) dialect",
            "MariaDB dialect",
            "SQLite dialect"
          ],
          "description": "Default SQL dialect for parsing queries"
        },
        "sqlCrack.syncEditorToFlow": {
          "type": "boolean",
          "default": true,
          "description": "Highlight flow nodes when clicking in SQL editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/dagre": "^0.7.53",
    "dagre": "^0.8.5",
    "node-sql-parser": "^5.3.1"
  }
}

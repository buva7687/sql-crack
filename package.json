{
  "name": "sql-crack",
  "displayName": "SQL Crack",
  "description": "Visualize SQL queries with interactive flow diagrams",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sql-crack.visualize",
        "title": "SQL Crack: Visualize SQL Query",
        "icon": "$(graph)"
      },
      {
        "command": "sql-crack.analyzeWorkspace",
        "title": "SQL Crack: Analyze Workspace Dependencies",
        "icon": "$(type-hierarchy)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sql-crack.visualize",
          "when": "editorLangId == sql",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "sql-crack.visualize",
          "when": "editorLangId == sql",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "sql-crack.analyzeWorkspace",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sql-crack.analyzeWorkspace",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sql-crack.visualize",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == sql"
      }
    ],
    "configuration": {
      "title": "SQL Crack",
      "properties": {
        "sqlCrack.defaultDialect": {
          "type": "string",
          "default": "MySQL",
          "enum": [
            "MySQL",
            "PostgreSQL",
            "TransactSQL",
            "Snowflake",
            "BigQuery",
            "Redshift",
            "Hive",
            "Athena",
            "Trino",
            "MariaDB",
            "SQLite"
          ],
          "enumDescriptions": [
            "MySQL dialect",
            "PostgreSQL dialect",
            "SQL Server / T-SQL dialect",
            "Snowflake dialect",
            "Google BigQuery dialect",
            "Amazon Redshift dialect",
            "Apache Hive / Databricks dialect",
            "Amazon Athena dialect",
            "Trino (formerly Presto) dialect",
            "MariaDB dialect",
            "SQLite dialect"
          ],
          "description": "Default SQL dialect for parsing queries"
        },
        "sqlCrack.syncEditorToFlow": {
          "type": "boolean",
          "default": true,
          "description": "Highlight flow nodes when clicking in SQL editor"
        },
        "sqlCrack.viewLocation": {
          "type": "string",
          "default": "beside",
          "enum": [
            "beside",
            "tab",
            "secondary-sidebar"
          ],
          "enumDescriptions": [
            "Opens beside the SQL file (like Markdown preview)",
            "Opens as a new tab in the editor area",
            "Opens in the secondary side bar (right side)"
          ],
          "description": "Where to display the SQL visualization panel"
        },
        "sqlCrack.defaultLayout": {
          "type": "string",
          "default": "hierarchical",
          "enum": [
            "hierarchical",
            "force-directed"
          ],
          "enumDescriptions": [
            "Hierarchical layout (top-to-bottom using dagre)",
            "Force-directed layout (physics-based using d3-force)"
          ],
          "description": "Default graph layout algorithm"
        },
        "sqlCrack.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh visualization when SQL file changes (with debounce)"
        },
        "sqlCrack.autoRefreshDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "Delay in milliseconds before auto-refresh triggers (default: 500ms)"
        },
        "sqlCrack.workspaceAutoIndexThreshold": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum number of SQL files to auto-index on workspace analysis (larger workspaces require manual confirmation)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/d3-force": "^3.0.10",
    "@types/dagre": "^0.7.53",
    "d3-force": "^3.0.0",
    "dagre": "^0.8.5",
    "node-sql-parser": "^5.3.1"
  }
}
